<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NFC Permissions â€” required for nfc_manager package -->
    <uses-permission android:name="android.permission.NFC" />

    <!-- Declare NFC as a feature (optional=true allows non-NFC devices to install) -->
    <uses-feature android:name="android.hardware.nfc" android:required="false" />

    <!-- Internet permission for profile fetching and API calls -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:label="Steel"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            <!-- Flutter theme during initialization -->
            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />

            <!-- Main launcher intent -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <!-- NFC NDEF discovery intent filter -->
            <!-- When another phone/tag sends an NDEF message, Android routes it here -->
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- Match Steel's URL pattern for deep linking -->
                <data android:scheme="https" android:host="steel.app" android:pathPrefix="/p/" />
            </intent-filter>

            <!-- NFC tech discovery fallback -->
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
            </intent-filter>

            <!-- Deep link handling for steel.app URLs -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" android:host="steel.app" />
            </intent-filter>
        </activity>

        <!-- Don't delete the meta-data below. -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
    </queries>
</manifest>
